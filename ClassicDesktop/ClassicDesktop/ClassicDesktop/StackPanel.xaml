<Window x:Class="ClassicDesktop.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassicDesktop"
        mc:Ignorable="d"
        Title="StackPanel" Height="300" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="128" VerticalAlignment="Top"
                    Width="284" Orientation="Horizontal">
            <Button Content="Botton" Height="128" VerticalAlignment="Top"></Button>
            <Button Content="Botton" Height="128" VerticalAlignment="Top"></Button>
            <Button Content="Botton" Height="128" VerticalAlignment="Top"></Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="128" VerticalAlignment="Top"
                    Width="284" Margin="0,128,0,0" Orientation="Vertical">
            <Button Content="Botton" Width="284" HorizontalAlignment="Left"></Button>
            <Button Content="Botton" Width="284" HorizontalAlignment="Left"></Button>
            <Button Content="Botton" Width="284" HorizontalAlignment="Left"></Button>
        </StackPanel>
    </Grid>
</Window>
